<VirtualHost *:80>
  ServerName <%= site %>
  ServerAlias <%= site %>.dev

  DocumentRoot <%= staticFilesDir %>
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  <Directory <%= staticFilesDir %>/>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>

  WSGIDaemonProcess <%= site %> processes=1 threads=15
  WSGIProcessGroup <%= site %>
  WSGIScriptAlias /wsgi <%= wsgiDir %>/hackasaurus_dot_org.py

  SetEnv recruitment.max_size 50000
  SetEnv recruitment.turing_answer hackasaurus
  SetEnv recruitment.output_dir <%= recruitmentFormsDir %>
</VirtualHost>
